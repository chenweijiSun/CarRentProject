<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/home_background_color"
        android:orientation="vertical">

    <include layout="@layout/view_toolbar"/>

    <View
            android:layout_width="match_parent"
            android:background="@color/westore_line_bg"
            android:layout_height="@dimen/line_height"/>

    <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_login_logo"
            android:layout_marginTop="@dimen/margin_common_1"
            android:layout_marginBottom="@dimen/margin_common_1"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_common_1"
            android:layout_marginRight="@dimen/margin_common_1"
            android:layout_height="@dimen/login_input_height">

        <ImageView
                android:src="@mipmap/icon_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/westore_text_dark"
                android:text="+86"
                android:textSize="18sp"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingRight="@dimen/padding_10dp"
                android:layout_height="wrap_content"/>

        <com.kingcar.rent.pro.widget.ClearEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:hint="请输入手机号"
                android:textSize="14sp"
                android:drawableRight="@mipmap/icon_clear"
                android:textColorHint="@color/westore_text_hint"
                android:layout_height="match_parent"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/westore_line_bg"
            android:layout_height="0.8dp"
            />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_common_1"
            android:layout_marginRight="@dimen/margin_common_1"
            android:layout_height="@dimen/login_input_height">

        <com.kingcar.rent.pro.widget.ClearEditText
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:hint="请输入验证码"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_sms_code"
                android:layout_alignParentLeft="true"
                android:textColorHint="@color/westore_text_hint"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/btn_sms_code"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:text="获取验证码>"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="#999999"
                android:layout_height="match_parent"/>
    </RelativeLayout>


    <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_common_1"
            android:layout_marginRight="@dimen/margin_common_1"
            android:background="@color/westore_line_bg"
            android:layout_height="0.8dp"/>

    <Button
            android:layout_width="match_parent"
            android:background="@drawable/selector_btn_common"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:enabled="false"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_common_1"
            android:layout_marginRight="@dimen/margin_common_1"
            android:text="登录"
            android:layout_height="@dimen/btn_common_height"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="密码登录>"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/westore_text_blue"
            android:layout_height="wrap_content"/>

</LinearLayout>