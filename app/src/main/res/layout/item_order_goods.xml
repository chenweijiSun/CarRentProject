<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="12dp"
    android:paddingRight="15dp"
    android:paddingBottom="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王者汽车商城"
            android:textColor="#ff333333"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/icon_home_jiantou"
            android:drawablePadding="6dp"
            android:text="分期付款"
            android:textColor="#ffff7979"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/home_background_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="13dp"
        android:paddingBottom="13dp">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginRight="14dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/t_icon_buy" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_count"
            android:layout_toRightOf="@+id/iv_head"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:paddingRight="@dimen/padding_15dp"
            android:text="奔驰GLE 2018款 GLE 320 4MATIC"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="x1"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_guige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_head"
            android:text="外观极光白    内饰深色"
            android:textColor="#ff666666"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_guige"
            android:layout_toRightOf="@+id/iv_head"
            android:paddingTop="8dp"
            android:text="￥32.29万"
            android:textColor="#ffff6124"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/home_background_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right|center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:text="共1件商品，合计"
            android:textColor="#ff666666"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥2000"
            android:textColor="#ffff7979"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/home_background_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical">

        <TextView
            android:layout_width="93dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_cancel_bg"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="#ff999999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="93dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_cancel_bg"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="#ff999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btn_add"
            android:layout_width="93dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/selector_btn_common"
            android:gravity="center"
            android:text="去评价"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>

