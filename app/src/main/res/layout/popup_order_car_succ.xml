<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="23dp"
    android:layout_marginRight="23dp"
    android:background="#EFF4EE"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:text="预约成功"
        android:textColor="#ffff7979"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:text="您预约的车将在12月26日 20:10前送到收车地"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <View
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:background="@drawable/shape_yuan_small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="开车前，请先关注续航"
                android:textColor="#ff333333"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实际行驶里程将与车速、空调等使用情况有关"
                android:textColor="#ffff7979"
                android:textSize="9sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center_vertical"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">

        <View
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:background="@drawable/shape_yuan_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看啥车是否有异常"
            android:paddingLeft="6dp"
            android:textColor="#ff333333"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center_vertical"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">

        <View
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:background="@drawable/shape_yuan_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认轮胎是否没气、鼓包、起皮"
            android:paddingLeft="6dp"
            android:textColor="#ff333333"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_common_height"
        android:layout_marginLeft="@dimen/margin_common_1"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/margin_common_1"
        android:background="@drawable/selector_btn_common"
        android:gravity="center"
        android:layout_marginBottom="18dp"
        android:text="我知道了"
        android:textColor="@color/white"
        android:textSize="18sp" />


</LinearLayout>