<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#E6FFFFFF"
        android:layout_height="match_parent">


    <LinearLayout
            android:layout_above="@+id/iv_close"
            android:layout_width="match_parent"
            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/icon_dingjinxunche"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/westore_text_dark"
                    android:paddingTop="15dp"
                    android:text="发定金寻车"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/icon_cheyuan"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/westore_text_dark"
                    android:text="发车源"
                    android:paddingTop="15dp"

                    android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/icon_xianshicheliang"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/westore_text_dark"
                    android:text="发闲时车辆出租"
                    android:paddingTop="15dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/padding_20dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/icon_public_close"
            android:layout_height="wrap_content"/>

</RelativeLayout>